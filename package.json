{
  "private": true,
  "name": "remix-app-boilerplate",
  "description": "A simple remix app boilerplate",
  "license": "MIT",
  "author": "Morpa",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "postinstall": "remix setup node",
    "start": "remix-serve build",
    "lint": "eslint ./app --max-warnings=0",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand",
    "generate": "yarn plop --plopfile generators/plopfile.js",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:e2e": "start-server-and-test dev 3000 cy:open",
    "test:e2e:ci": "start-server-and-test dev 3000 cy:run",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.7.3",
    "@remix-run/vercel": "^1.5.1",
    "@styled-icons/ionicons-solid": "^10.46.0",
    "@styled-icons/material-outlined": "^10.34.0",
    "dotenv": "^16.0.1",
    "lodash.pick": "^4.4.0",
    "nprogress": "^0.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.5.1",
    "styled-components": "^5.3.5",
    "styled-media-query": "^2.1.2",
    "tiny-invariant": "^1.2.0"
  },
  "lint-staged": {
    "./app/**/*": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/react": "^6.4.21",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^14.4.2",
    "@types/lodash.pick": "^4.4.7",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.39.0",
    "cypress": "^10.10.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.7",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-styled-components": "^7.0.8",
    "lint-staged": "^13.0.3",
    "plop": "^3.1.1",
    "prettier": "^2.7.1",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
